{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "./src",
    "composite": true,
    "outDir": "./",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["@types/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
